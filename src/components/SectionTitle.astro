---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mb-20 section-title opacity-0">
  <h2
    class="text-5xl md:text-6xl font-bold mb-2 text-transparent py-2 bg-clip-text bg-gradient-to-t from-db-pink/90 to-db-pink/50 relative drop-shadow-lg hover:drop-shadow-md transition-all duration-300"
  >
    {title}
    <div
      class="absolute left-[-8px] h-[2px] w-1/3 bg-gradient-to-r from-db-green to-transparent rounded-full bottom-3 transform transition-all duration-500 group-hover:w-[110%] group-hover:scale-105"
    >
    </div>
  </h2>
  {
    subtitle && (
      <p class="text-lg md:text-xl   max-w-7xl leading-relaxed text-db-pink text-balance tracking-wide">
        {subtitle}
      </p>
    )
  }
</div>

<script>
  // Animation for section titles
  document.addEventListener("DOMContentLoaded", () => {
    const titles = document.querySelectorAll(".section-title");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add(
              "opacity-100",
              "transition-all",
              "duration-700",
              "ease-out"
            );
            entry.target.classList.add("transform", "translate-y-0");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );

    titles.forEach((title) => {
      title.classList.add("transform", "translate-y-10");
      observer.observe(title);
    });
  });
</script>
