---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Get In Touch",
  subtitle = "We'd love to hear from you. Fill out the form below and we'll get back to you as soon as possible.",
} = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md">
  {title && <h2 class="text-2xl font-bold mb-2 text-db-pink">{title}</h2>}
  {subtitle && <p class="mb-6 text-gray-700">{subtitle}</p>}

  <form class="space-y-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label for="name" class="block mb-1 font-medium">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-db-pink"
        />
      </div>
      <div>
        <label for="email" class="block mb-1 font-medium">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-db-pink"
        />
      </div>
    </div>

    <div>
      <label for="phone" class="block mb-1 font-medium">Phone Number</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-db-pink"
      />
    </div>

    <div>
      <label for="message" class="block mb-1 font-medium">Message</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-db-pink"
      ></textarea>
    </div>

    <button
      type="submit"
      class="bg-db-pink hover:bg-db-light-pink text-white font-bold py-3 px-6 rounded-lg transition-colors"
    >
      Send Message
    </button>
  </form>
</div>

