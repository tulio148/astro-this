---
interface Props {
  name: string;
  level: string;
  dateBegin: string;
  dateEnd: string;
  time: string;
  location: string;
  price: string;
  bookingLink: string;
  description: string;
}

const {
  name,
  level,
  dateBegin,
  dateEnd,
  time,
  location,
  price,
  bookingLink,
  description,
} = Astro.props;
---

<div
  class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-100"
>
  <div class="p-8">
    <div class="flex justify-between items-start mb-4">
      <h3 class="text-2xl font-bold text-db-pink">{name}</h3>
      <span
        class="px-3 py-1 bg-db-light-pink/10 text-db-pink rounded-full text-sm font-medium"
      >
        {level}
      </span>
    </div>

    <p class="text-slate-600 mb-6 text-balance text-lg">{description}</p>

    <div class="space-y-4 mb-6">
      <div class="flex items-start">
        <svg
          class="w-5 h-5 text-db-pink mt-0.5 mr-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
          ></path>
        </svg>
        <div>
          <span class="text-slate-600 font-medium">Dates:</span>
          <span class="text-slate-800 ml-2">{dateBegin} - {dateEnd}</span>
        </div>
      </div>

      <div class="flex items-start">
        <svg
          class="w-5 h-5 text-db-pink mt-0.5 mr-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <span class="text-slate-600 font-medium">Time:</span>
          <span class="text-slate-800 ml-2">{time}</span>
        </div>
      </div>

      <div class="flex items-start">
        <svg
          class="w-5 h-5 text-db-pink mt-0.5 mr-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <div>
          <span class="text-slate-600 font-medium">Location:</span>
          <span class="text-slate-800 ml-2">{location}</span>
        </div>
      </div>

      <div class="flex items-start">
        <svg
          class="w-5 h-5 text-db-pink mt-0.5 mr-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <div>
          <span class="text-slate-600 font-medium">Price:</span>
          <span class="text-slate-800 ml-2">{price}</span>
        </div>
      </div>
    </div>

    <a
      href={bookingLink}
      target="_blank"
      rel="noopener noreferrer"
      class="block w-full bg-db-pink hover:bg-db-light-pink text-white text-center font-bold py-3 px-6 rounded-lg transition-colors shadow-md hover:shadow-lg"
    >
      Book Now
    </a>
  </div>
</div>
