---
import { Image } from "astro:assets";
interface Props {
  title: string;
  description: string;
  color: string;
  size: string;
  material: string;
  availability: string;
  price: string;
  image: any;
}

const {
  title,
  description,
  color,
  size,
  material,
  availability,
  price,
  image,
} = Astro.props;
---

<div
  class="group bg-white shadow-lg rounded-2xl overflow-hidden transition-all duration-500 hover:shadow-xl transform hover:-translate-y-1"
>
  <div class="relative">
    <div class="aspect-[3/4] overflow-hidden">
      <Image
        src={image}
        alt={title}
        width={400}
        height={533}
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
      />
    </div>
    <!-- Availability badge -->
    <div
      class="absolute top-4 right-4 bg-db-pink/90 text-white px-3 py-1 rounded-full text-sm font-medium"
    >
      {availability}
    </div>
  </div>

  <div class="p-6">
    <h3 class="text-2xl font-bold mb-2 text-db-pink">{title}</h3>

    <div class="mb-4 flex flex-wrap gap-2">
      <span
        class="inline-block bg-pink-100 text-db-pink text-xs px-3 py-1 rounded-full"
      >
        {size}
      </span>
      <span
        class="inline-block bg-blue-100 text-blue-800 text-xs px-3 py-1 rounded-full"
      >
        {color}
      </span>
    </div>

    <div class="space-y-2 mb-4">
      <p
        class="text-slate-600 text-sm line-clamp-3 group-hover:line-clamp-none transition-all duration-300"
      >
        {description}
      </p>
      <p class="text-slate-700 text-sm">
        <strong>Material:</strong>
        {material}
      </p>
    </div>

    <div
      class="flex justify-between items-center pt-3 border-t border-gray-100"
    >
      <span class="text-db-pink text-xl font-bold">{price}/day</span>
      <a
        href="#book-costume"
        class="bg-gradient-to-r from-db-pink to-db-light-pink hover:from-db-light-pink hover:to-db-pink text-white font-medium py-2 px-5 rounded-lg transition-all duration-300 inline-block shadow-sm hover:shadow-md"
      >
        Book Now
      </a>
    </div>
  </div>
</div>

<script>
  // Add a staggered entrance animation for cards
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".group");
    cards.forEach((card, index) => {
      card.classList.add("opacity-0", "translate-y-8");
      setTimeout(
        () => {
          card.classList.add("transition-all", "duration-700", "ease-out");
          card.classList.remove("opacity-0", "translate-y-8");
        },
        100 + index * 100
      );
    });
  });
</script>
