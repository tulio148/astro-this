---
import { Image } from "astro:assets";
interface Props {
  title: string;
  description: string;
  price: number;
  image: any; // Accept any type of image
}

const { title, description, price, image } = Astro.props;
---

<div class="flex flex-col justify-center items-center">
  <div
    class="m-4 px-4 sm:p-8 border border-white/50 bg-gradient-to-b from-db-pink/80 to-db-pink/80 shadow-lg shadow-white/40 rounded-xl overflow-hidden"
  >
    <div class="aspect-square overflow-hidden rounded-lg mb-6">
      <Image
        src={image}
        alt={title}
        width={400}
        height={400}
        class="w-full h-full object-cover transition-transform hover:scale-105 duration-500"
      />
    </div>
    <h3 class="text-2xl font-bold mb-2 text-white">{title}</h3>
    <p class="text-white/80 mb-4">{description}</p>
    <div class="flex justify-between items-center mb-6">
      <span class="text-white text-xl font-bold">${price}/day</span>
      <span class="text-white/80 text-sm">Security deposit required</span>
    </div>
    <div class="flex justify-center">
      <a
        href="#book-costume"
        class="bg-white hover:bg-gray-100 text-db-pink font-bold py-3 px-6 rounded-lg transition-colors inline-block"
      >
        Book Now
      </a>
    </div>
  </div>
</div>
