---
interface Props {
  title: string;
  description: string;
  image: string;
  level: string;
  day: string;
  time: string;
}

const { title, description, image, level, day, time } = Astro.props;
---

<div class="flex flex-col justify-center items-center">
  <div
    class="m-4 px-4 sm:p-8 border border-white/50 bg-gradient-to-b from-db-pink/80 to-db-pink/80 shadow-lg shadow-white/40 rounded-xl overflow-hidden"
  >
    <div class="aspect-video overflow-hidden rounded-lg mb-6">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform hover:scale-105 duration-500"
      />
    </div>
    <h3 class="text-2xl font-bold mb-2 text-white">{title}</h3>
    <div class="flex items-center mb-4 text-white/90">
      <span class="mr-4">{level}</span>
      <span>{day} at {time}</span>
    </div>
    <p class="text-white/80 mb-6">{description}</p>
    <div class="flex justify-center">
      <a
        href="#book-class"
        class="bg-white hover:bg-gray-100 text-db-pink font-bold py-3 px-6 rounded-lg transition-colors inline-block"
      >
        Book Now
      </a>
    </div>
  </div>
</div>

